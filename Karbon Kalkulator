<script>
function beregnKarbon() {
    var language = document.getElementById("languageSelect").value;
    var userInput = document.getElementById("userInput").value;
    var outputField = document.getElementById("outputField");

    // Generer et tilfeldig karbonutslipp mellom 0.1g og 15g CO‚ÇÇ
    var karbonUtslipp = (Math.random() * (15 - 0.1) + 0.1).toFixed(2);

    // Respons basert p√• input
    var response;
    if (userInput.trim() === "") {
        response = "‚ö†Ô∏è Skriv inn litt kode f√∏rst!";
    } else {
        response = `‚úÖ Din ${language}-kode genererer ${karbonUtslipp}g CO‚ÇÇ. üå±`;
    }

    
    outputField.value = response;
}
</script>



